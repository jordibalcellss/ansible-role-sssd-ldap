[sssd]
config_file_version = 2
services = nss, pam
domains = {{ domain }}
debug_level = 6

[domain/{{ domain }}]
id_provider = ldap
auth_provider = ldap
ldap_uri = {{ ldap.uri }}
ldap_search_base = {{ ldap.base }}
ldap_default_bind_dn = {{ ldap.bind.dn }}
ldap_default_authtok_type = password
ldap_default_authtok = {{ ldap.bind.password }}
cache_credentials = true
